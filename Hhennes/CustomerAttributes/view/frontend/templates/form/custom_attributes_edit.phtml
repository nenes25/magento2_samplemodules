    //Magento 2.4 secure inline js
    $scriptString = <<<script
    require([
        "jquery",
        "mage/mage"
    ], function($){
       console.log('it works secured !');
        var sampleYesNoCheckBoxChoice = $('#sample_yes_no_checkbox_choice');
