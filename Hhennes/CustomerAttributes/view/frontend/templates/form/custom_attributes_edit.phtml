        $(sampleYesNoCheckBoxChoice).on('change',function(){
            var sampleYesNoValue = ( $(this).is(':checked') ) ? 1 : 0 ;
            console.log('sampleYesNoValue',sampleYesNoValue);
            $(sampleYesNoCheckBoxField).val(sampleYesNoValue);
        });

        });
script;
